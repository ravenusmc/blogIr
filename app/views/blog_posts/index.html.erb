<p id="notice"><%= notice %></p>

<h1>Mike's Blog on Foreign Policy</h1>

  <div class="row">
    <% @blog_posts.each do |blog_post| %>
      <div class="col-md-6">
        <div class="panel panel-primary">
          <div class="panel-heading">
            <%= blog_post.title %>
          </div>
          <div class="panel-body">
            By: <%= blog_post.author %><br />
            <p><%= blog_post.blog_entry %></p>
          </div>
          <div class="panel-footer">
            <%= link_to 'Show', blog_post, class: "btn btn-primary" %>
            <%= link_to 'Edit', edit_blog_post_path(blog_post), class: "btn btn-info" %>
            <%= link_to 'Destroy', blog_post, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger" %>
          </div>
        </div>
      </div>
    <% end %>
  </div>




<%= link_to 'New Blog post', new_blog_post_path, class: "btn btn-primary" %>
