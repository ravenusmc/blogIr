/* Over all CSS Styling */

body {
 	background-color: #0B4C5F;
 }

.container {
	background-color: rgba(255,255,255,0.8);
	margin-top: 25px;
	margin-bottom: 25px;
	padding-bottom: 10px;
	border-radius: 10px;
}

 .invisible {
 	display: none;
 }

 .blog_index {
 	background: rgba(255,255,255,0.8);
 }

/* Index Page CSS */

.jumbotron {
	text-align: center;
	background-image: url("../images/trail.jpg");
	height: 600px;
	width: auto;
	background-size: 1300px 475px;
	padding-top: 0px;
}

.jum_image{
	height: 600px;
	width: 2000px;
}

.banner {
	background-position: top left, center center;
	background-repeat: repeat, no-repeat;
	background-size: auto, cover;
	color: #fff;
	padding: 12em 0;
	position: relative;
	text-align: center
}

.inner {
	display: inline-block;
	background: rgba(29,39,38,0.7);
	position: relative;
	z-index: 2;
	padding: 25px 25px 25px 25px;
	text-align: center;
}

h3 {
	font-size: 40px;
	color: white;
}

.inner_font {
	font-size: 35px;
	color: white;
}


